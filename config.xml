<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.click.judgements"
    version   = "1.0.0">
  <name>Click Judgements</name>
  <description>
    Click Judgements Application
  </description>
  <preference name="phonegap-version" value="2.9.0" />
  
  <plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
  <plugin name="Device" value="org.apache.cordova.Device" />
  <plugin name="Notification" value="org.apache.cordova.Notification"/>

  <feature name="Vibration">
    <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
  </feature>
  <feature name="Notification">
    <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
  </feature>
  
  <!-- Icons -->
  <icon src="lawpadicon.png" />
  
  <icon src="lawpadicon.png" width="57" height="57" />
  <icon src="lawpadicon.png" gap:platform="ios" width="72" height="72" />
  <icon src="lawpadicon.png" width="114" height="114" />
  
  <icon src="lawpadicon.png" gap:platform="android" gap:density="ldpi" />
  <icon src="lawpadicon.png" gap:platform="android" gap:density="mdpi" />
  <icon src="lawpadicon.png" gap:platform="android" gap:density="hdpi" />
  
  <!-- Splash Screens 
  <preference name="orientation" value="default" />
  -->
  
  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="true" />
  <preference name="webviewbounce" value="false" />
  <preference name="show-splash-screen-spinner" value="false" />

  <gap:splash src="lawpadsplash.png" />

  <gap:splash src="lawpadsplash.png" width="320" height="480" />
  <gap:splash src="lawpadsplash.png" width="640" height="960" />
  <gap:splash src="lawpadsplash.png" width="1024" height="768" />
  <gap:splash src="lawpadsplash.png" width="768" height="1024" />

  <gap:splash src="lawpadsplash.png" gap:platform="android" gap:density="ldpi" />
  <gap:splash src="lawpadsplash.png" gap:platform="android" gap:density="mdpi" />
  <gap:splash src="lawpadsplash.png" gap:platform="android" gap:density="hdpi" />
  <gap:splash src="lawpadsplash.png" gap:platform="android" gap:density="xhdpi" />

</widget>